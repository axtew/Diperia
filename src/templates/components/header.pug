block vars

header.header(class=`${cls}`)
  .container
    .header__left
      a.header__logo.logo(href="#")
        img.logo__img(src="./assets/img/logo.png")
        .logo__text
          span.logo__text-top Diperia
          span.logo__text-bottom Role play


    .header__right
      .header__nav.nav
        ul.nav__list
          li.nav__item
            .nav__gradient
            a.nav__link.nav__link--active(href="#") Главная
          each section in sections
            li.nav__item
              a.nav__link(href="#") #{section}